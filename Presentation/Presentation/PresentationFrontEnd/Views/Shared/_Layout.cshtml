<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="color">
                    <p>TWEETS EXTRACTION PROJECT</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div><h2>Graphics</h2></div>
            </div>
            <div class="col-sm-4">
                <div><h2>Developers</h2></div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="table">
                    <p>From Date:<input type="date"></p>
                    <p>To Date:<input type="date"></p>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="table">
                    <input type="checkbox" /> Italy <br />
                    <input type="checkbox" /> Belgium <br />
                    <input type="checkbox" /> UK <br />
                    <input type="checkbox" /> Germany <br />
                    <input type="checkbox" /> France <br />
                </div>
            </div>

            <div class="col-sm-4">
                <div class="table">
                    <input type="checkbox" /> C#<br />
                    <input type="checkbox" /> Java <br />
                    <input type="checkbox" /> Python <br />
                    <input type="checkbox" /> Javascript <br />
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-4 col-sm-offset-8">
                @RenderBody()
            </div>
        </div>


        <div class="row">
            <div class="col-sm-12">
                &copy; @DateTime.Now.Year - TSiD
            </div>
        </div>



    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
